{
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(pnpm *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(stripe listen*)",
      "Bash(supabase *)",
      "WebSearch",
      "mcp__plugin_sentry_sentry__find_organizations",
      "mcp__plugin_sentry_sentry__search_issues",
      "Bash(grep:*)",
      "Bash(cat:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/migration-validator.sh",
            "timeout": 30
          },
          {
            "type": "prompt",
            "prompt": "Review migration validation results above. If ERRORS found: list them clearly, suggest fixes, and DO NOT complete the task until fixed. If only warnings: note them but allow completion."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-retrospective.sh",
            "timeout": 10
          },
          {
            "type": "prompt",
            "prompt": "Review session for error patterns. If same error type occurred 2+ times or debugging spanned >2 files, suggest a brief ERROR_HISTORY.md entry (Type, Severity, Files, Root Cause, Fix). Skip typos and obvious one-offs.",
            "timeout": 30
          }
        ]
      }
    ]
  }
}

{
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Edit",
      "Write",
      "Bash(pwd)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(* --version)",
      "Bash(node -v)",
      "Bash(pnpm -v)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git switch:*)",
      "Bash(git checkout:*)",
      "Bash(git restore:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git stash:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm test*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm dev:*)",
      "Bash(pnpm exec:*)",
      "WebSearch",
      "WebFetch(domain:gsap.com)",
      "WebFetch(domain:tailwindcss.com)",
      "WebFetch(domain:github.com)",
      "Bash(pnpm lint:css:*)",
      "Bash(npm run lint)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:r3f.docs.pmnd.rs)",
      "WebFetch(domain:drei.docs.pmnd.rs)",
      "WebFetch(domain:www.joshwcomeau.com)",
      "WebFetch(domain:threejs.org)",
      "WebFetch(domain:use-gesture.netlify.app)"
    ],
    "ask": [
      "WebFetch",
      "WebSearch",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git merge:*)",
      "Bash(rm:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": []
  },
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-retrospective.sh",
            "timeout": 10
          },
          {
            "type": "prompt",
            "prompt": "Review session for error patterns. If same error type occurred 2+ times or debugging spanned >2 files, suggest a brief ERROR_HISTORY.md entry (Type, Severity, Files, Root Cause, Fix). Skip typos and obvious one-offs.",
            "timeout": 30
          }
        ]
      }
    ]
  }
}

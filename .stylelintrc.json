{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "declaration-property-value-disallowed-list": {
      "z-index": ["/^[2-9]\\d*$/", "/^-?[2-9]\\d*$/"],
      "message": "Use z-index CSS variable (e.g., var(--z-modal)) instead of hardcoded number. See docs/STACKING-CONTEXT.md"
    },
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["tailwind", "apply", "layer", "config", "theme", "custom-variant", "utility", "source"]
    }],
    "function-no-unknown": [true, {
      "ignoreFunctions": ["theme", "var"]
    }],
    "import-notation": null,
    "color-function-notation": null,
    "color-function-alias-notation": null,
    "alpha-value-notation": null,
    "color-hex-length": null,
    "declaration-block-single-line-max-declarations": null,
    "rule-empty-line-before": null,
    "custom-property-empty-line-before": null,
    "property-no-vendor-prefix": null,
    "length-zero-no-unit": null,
    "no-duplicate-selectors": null,
    "font-family-name-quotes": null,
    "media-feature-range-notation": null,
    "no-descending-specificity": null,
    "declaration-block-no-duplicate-custom-properties": null,
    "value-keyword-case": null,
    "declaration-block-no-redundant-longhand-properties": null,
    "no-invalid-position-at-import-rule": [true, {
      "ignoreAtRules": ["tailwind", "source"]
    }],
    "custom-property-pattern": ["^([a-z][a-z0-9]*)(-[a-z0-9]+)*(--.+)?$", {
      "message": "Expected custom property name to be kebab-case (allowing double-dash for modifiers)"
    }]
  }
}
